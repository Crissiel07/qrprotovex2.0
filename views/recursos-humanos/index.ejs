<h1 class="mt-4">Panel de Recursos Humanos</h1>
<p class="lead mb-4">Bienvenido, <%= user.name %> | <span class="badge badge-warning text-dark">Recursos Humanos</span></p>

<div class="row">
  <div class="col-md-12 mb-4">
    <div class="card">
      <div class="card-header bg-warning text-dark">
        <h5 class="mb-0">Gestión de Personal</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body text-center">
                <i class="fas fa-user-tie fa-3x mb-3 text-primary"></i>
                <h5>Empleados</h5>
                <p>Gestiona la información de empleados</p>
                <a href="/recursos-humanos/empleados" class="btn btn-primary">Gestionar Empleados</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body text-center">
                <i class="fas fa-file-contract fa-3x mb-3 text-success"></i>
                <h5>Contratos</h5>
                <p>Administra contratos y documentación</p>
                <a href="#" class="btn btn-success">Gestionar Contratos</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body text-center">
                <i class="fas fa-calendar-alt fa-3x mb-3 text-info"></i>
                <h5>Asistencia</h5>
                <p>Control de asistencia y horarios</p>
                <a href="/recursos-humanos/attendance/scan" class="btn btn-info">Control de Asistencia</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 mb-4">
    <div class="card">
      <div class="card-header bg-info text-white">
        <h5 class="mb-0">Estadísticas de Personal</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6 mb-3">
            <div class="card bg-primary text-white">
              <div class="card-body text-center">
                <h3><i class="fas fa-users"></i> 12</h3>
                <p>Empleados Activos</p>
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="card bg-success text-white">
              <div class="card-body text-center">
                <h3><i class="fas fa-user-check"></i> 10</h3>
                <p>Asistencia Hoy</p>
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="card bg-warning text-white">
              <div class="card-body text-center">
                <h3><i class="fas fa-file-signature"></i> 3</h3>
                <p>Contratos Pendientes</p>
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="card bg-danger text-white">
              <div class="card-body text-center">
                <h3><i class="fas fa-user-clock"></i> 2</h3>
                <p>Ausencias</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-6 mb-4">
    <div class="card">
      <div class="card-header bg-success text-white">
        <h5 class="mb-0">Actividad Reciente</h5>
      </div>
      <div class="card-body">
        <ul class="list-group">
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <i class="fas fa-user-plus text-success"></i>
              <span class="ml-2">Nuevo empleado contratado</span>
              <small class="text-muted d-block">Carlos Martínez</small>
            </div>
            <span class="badge badge-primary badge-pill">Hace 1 día</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <i class="fas fa-file-contract text-info"></i>
              <span class="ml-2">Contrato renovado</span>
              <small class="text-muted d-block">Ana López</small>
            </div>
            <span class="badge badge-primary badge-pill">Hace 2 días</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <i class="fas fa-user-clock text-warning"></i>
              <span class="ml-2">Solicitud de vacaciones</span>
              <small class="text-muted d-block">Roberto Sánchez</small>
            </div>
            <span class="badge badge-primary badge-pill">Hace 3 días</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <i class="fas fa-clipboard-list text-danger"></i>
              <span class="ml-2">Evaluación completada</span>
              <small class="text-muted d-block">María Rodríguez</small>
            </div>
            <span class="badge badge-primary badge-pill">Hace 4 días</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="mt-3">
  <a href="/dashboard" class="btn btn-secondary mr-2"><i class="fas fa-arrow-left"></i> Volver al Dashboard</a>
  <a href="/users/logout" class="btn btn-danger"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a>
</div>
