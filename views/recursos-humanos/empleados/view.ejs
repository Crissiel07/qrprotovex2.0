<h1 class="mt-4">Detalles del Empleado</h1>
<p class="lead mb-4">Informaciu00f3n completa del empleado</p>

<div class="card mb-4">
  <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><%= employee.nombres %> <%= employee.apellidos %></h5>
    <div>
      <a href="/recursos-humanos/empleados/edit/<%= employee._id %>" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Editar</a>
      <a href="/recursos-humanos/empleados/delete/<%= employee._id %>" class="btn btn-danger btn-sm" onclick="return confirm('u00bfEstu00e1 seguro de eliminar este empleado?')"><i class="fas fa-trash"></i> Eliminar</a>
    </div>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4 text-center mb-4">
        <% if(employee.qrCode) { %>
          <div class="mb-3">
            <img src="<%= employee.qrCode %>" alt="Cu00f3digo QR" class="img-fluid border" style="max-width: 200px;">
          </div>
          <p class="text-muted">Cu00f3digo QR para control de asistencia</p>
        <% } else { %>
          <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i> No se ha generado cu00f3digo QR
          </div>
        <% } %>
      </div>
      
      <div class="col-md-8">
        <h5 class="border-bottom pb-2 mb-3">Datos Personales</h5>
        <div class="row mb-2">
          <div class="col-md-4 font-weight-bold">Cu00e9dula:</div>
          <div class="col-md-8"><%= employee.cedula %></div>
        </div>
        <div class="row mb-2">
          <div class="col-md-4 font-weight-bold">Nombres:</div>
          <div class="col-md-8"><%= employee.nombres %></div>
        </div>
        <div class="row mb-2">
          <div class="col-md-4 font-weight-bold">Apellidos:</div>
          <div class="col-md-8"><%= employee.apellidos %></div>
        </div>
        <div class="row mb-2">
          <div class="col-md-4 font-weight-bold">Email:</div>
          <div class="col-md-8"><%= employee.email %></div>
        </div>
        <div class="row mb-2">
          <div class="col-md-4 font-weight-bold">Telu00e9fono:</div>
          <div class="col-md-8"><%= employee.telefono || 'No registrado' %></div>
        </div>
        <div class="row mb-2">
          <div class="col-md-4 font-weight-bold">Fecha de Nacimiento:</div>
          <div class="col-md-8"><%= employee.fechaNacimiento ? new Date(employee.fechaNacimiento).toLocaleDateString() : 'No registrada' %></div>
        </div>
        <div class="row mb-2">
          <div class="col-md-4 font-weight-bold">Gu00e9nero:</div>
          <div class="col-md-8"><%= employee.genero || 'No registrado' %></div>
        </div>
        <div class="row mb-2">
          <div class="col-md-4 font-weight-bold">Direcciu00f3n:</div>
          <div class="col-md-8"><%= employee.direccion || 'No registrada' %></div>
        </div>
        
        <h5 class="border-bottom pb-2 mb-3 mt-4">Informaciu00f3n Laboral</h5>
        <div class="row mb-2">
          <div class="col-md-4 font-weight-bold">Cargo:</div>
          <div class="col-md-8"><%= employee.cargo %></div>
        </div>
        <div class="row mb-2">
          <div class="col-md-4 font-weight-bold">Departamento:</div>
          <div class="col-md-8"><%= employee.departamento %></div>
        </div>
        <div class="row mb-2">
          <div class="col-md-4 font-weight-bold">Estado:</div>
          <div class="col-md-8">
            <% if(employee.estado === 'Activo') { %>
              <span class="badge badge-success">Activo</span>
            <% } else if(employee.estado === 'Inactivo') { %>
              <span class="badge badge-secondary">Inactivo</span>
            <% } else if(employee.estado === 'Suspendido') { %>
              <span class="badge badge-warning">Suspendido</span>
            <% } else if(employee.estado === 'Retirado') { %>
              <span class="badge badge-danger">Retirado</span>
            <% } %>
          </div>
        </div>
        <div class="row mb-2">
          <div class="col-md-4 font-weight-bold">Tipo de Contrato:</div>
          <div class="col-md-8"><%= employee.tipoContrato %></div>
        </div>
        <div class="row mb-2">
          <div class="col-md-4 font-weight-bold">Fecha de Contrataciu00f3n:</div>
          <div class="col-md-8"><%= employee.fechaContratacion ? new Date(employee.fechaContratacion).toLocaleDateString() : 'No registrada' %></div>
        </div>
        <div class="row mb-2">
          <div class="col-md-4 font-weight-bold">Fecha de Registro:</div>
          <div class="col-md-8"><%= new Date(employee.fechaRegistro).toLocaleDateString() %></div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-3">
  <a href="/recursos-humanos/empleados" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver a la lista</a>
</div>
