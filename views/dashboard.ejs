      <div class="text-center mb-3">
        <a href="/recursos-humanos" class="btn btn-warning"><i class="fas fa-user-tie"></i> Ir al Panel de Recursos Humanos</a>
      </div>
      <div class="row">
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body text-center">
              <i class="fas fa-user-tie fa-3x mb-3"></i>
