              <a href="#" class="btn btn-primary btn-sm">Ver Asistencia</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% } %>

<% if(user.role === 'caja') { %>
  <div class="card mb-4">
    <div class="card-header bg-info text-white">
      <h5 class="mb-0">Panel de Caja</h5>
    </div>
    <div class="card-body">
