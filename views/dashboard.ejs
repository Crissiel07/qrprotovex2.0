<h1 class="mt-4">Dashboard</h1>
<p class="lead mb-3">Bienvenido <%= user.name %></p>
<div class="card mb-4">
  <div class="card-body">
    <h5 class="card-title">Información de Usuario</h5>
    <p class="card-text">
      <strong>Nombre:</strong> <%= user.name %><br>
      <strong>Email:</strong> <%= user.email %><br>
      <strong>Rol:</strong> 
      <% let badgeClass = 'badge-info'; %>
      <% let roleName = 'Desconocido'; %>
      
      <% if(user.role === 'admin') { %>
        <% badgeClass = 'badge-danger'; %>
        <% roleName = 'Administrador'; %>
      <% } else if(user.role === 'recursos_humanos') { %>
        <% badgeClass = 'badge-warning'; %>
        <% roleName = 'Recursos Humanos'; %>
      <% } else if(user.role === 'caja') { %>
        <% badgeClass = 'badge-info'; %>
        <% roleName = 'Caja'; %>
      <% } else if(user.role === 'control_estudio') { %>
        <% badgeClass = 'badge-success'; %>
        <% roleName = 'Control de Estudio'; %>
      <% } %>
      
      <span class="badge <%= badgeClass %>">
        <%= roleName %>
      </span><br>
      <strong>ID:</strong> <%= user.id %>
    </p>
  </div>
</div>

<% if(user.role === 'admin') { %>
  <div class="card mb-4">
    <div class="card-header bg-danger text-white">
      <h5 class="mb-0">Panel de Administrador</h5>
    </div>
    <div class="card-body">
      <div class="text-center mb-3">
        <a href="/admin-panel" class="btn btn-danger"><i class="fas fa-user-shield"></i> Ir al Panel de Administración</a>
      </div>
      <div class="row">
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body text-center">
              <i class="fas fa-users fa-3x mb-3"></i>
              <h5>Gestión de Usuarios</h5>
              <p>Administra todos los usuarios del sistema</p>
              <a href="#" class="btn btn-primary btn-sm">Gestionar</a>
            </div>
          </div>
        </div>
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body text-center">
              <i class="fas fa-cogs fa-3x mb-3"></i>
              <h5>Configuración</h5>
              <p>Configura los parámetros del sistema</p>
              <a href="#" class="btn btn-primary btn-sm">Configurar</a>
            </div>
          </div>
        </div>
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body text-center">
              <i class="fas fa-chart-bar fa-3x mb-3"></i>
              <h5>Reportes</h5>
              <p>Visualiza reportes y estadísticas</p>
              <a href="#" class="btn btn-primary btn-sm">Ver Reportes</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% } %>

