<h1 class="mt-4">Editar Usuario</h1>
<p class="lead mb-4">Modifica la información del usuario</p>

<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card">
      <div class="card-header bg-warning text-white">
        <h5 class="mb-0">Editar Usuario</h5>
      </div>
      <div class="card-body">
        <form action="/admin-users/update/<%= editUser._id %>" method="POST">
          <div class="form-group">
            <label for="name">Nombre Completo</label>
            <input
              type="text"
              id="name"
              name="name"
              class="form-control"
              placeholder="Ingresa el nombre completo"
              value="<%= editUser.name %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="username">Nombre de Usuario</label>
            <input
              type="text"
              id="username"
              name="username"
              class="form-control"
              placeholder="Ingresa el nombre de usuario"
              value="<%= editUser.username %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Ingresa el email"
              value="<%= editUser.email %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="role">Rol</label>
            <select class="form-control" id="role" name="role" required>
              <option value="admin" <%= editUser.role === 'admin' ? 'selected' : '' %>>Administrador</option>
              <option value="recursos_humanos" <%= editUser.role === 'recursos_humanos' ? 'selected' : '' %>>Recursos Humanos</option>
              <option value="caja" <%= editUser.role === 'caja' ? 'selected' : '' %>>Caja</option>
              <option value="control_estudio" <%= editUser.role === 'control_estudio' ? 'selected' : '' %>>Control de Estudio</option>
            </select>
          </div>
          <div class="form-group">
            <label for="password">Nueva Contraseña (dejar en blanco para mantener la actual)</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Nueva contraseña (opcional)"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirmar Nueva Contraseña</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirmar nueva contraseña (opcional)"
            />
          </div>
          <button type="submit" class="btn btn-warning btn-block">Actualizar Usuario</button>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="mt-3">
  <a href="/admin-users" class="btn btn-secondary mr-2"><i class="fas fa-arrow-left"></i> Volver a Gestión de Usuarios</a>
</div>
