<h1 class="mt-4">Panel de Administración</h1>
<p class="lead mb-4">Bienvenido, <%= user.name %> | <span class="badge badge-danger">Administrador</span></p>

<div class="row">
  <div class="col-md-12 mb-4">
    <div class="card">
      <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Gestión del Sistema</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body text-center">
                <i class="fas fa-users fa-3x mb-3 text-primary"></i>
                <h5>Gestión de Usuarios</h5>
                <p>Administra todos los usuarios del sistema</p>
                <a href="/admin-users" class="btn btn-primary">Gestionar Usuarios</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body text-center">
                <i class="fas fa-user-shield fa-3x mb-3 text-success"></i>
                <h5>Roles y Permisos</h5>
                <p>Configura roles y permisos del sistema</p>
                <a href="#" class="btn btn-success">Gestionar Roles</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body text-center">
                <i class="fas fa-cogs fa-3x mb-3 text-warning"></i>
                <h5>Configuración</h5>
                <p>Configura los parámetros del sistema</p>
                <a href="#" class="btn btn-warning text-white">Configuración</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 mb-4">
    <div class="card">
      <div class="card-header bg-info text-white">
        <h5 class="mb-0">Estadísticas</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6 mb-3">
            <div class="card bg-primary text-white">
              <div class="card-body text-center">
                <h3><i class="fas fa-users"></i> 24</h3>
                <p>Usuarios Totales</p>
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="card bg-success text-white">
              <div class="card-body text-center">
                <h3><i class="fas fa-chart-line"></i> 156</h3>
                <p>Transacciones</p>
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="card bg-warning text-white">
              <div class="card-body text-center">
                <h3><i class="fas fa-user-tie"></i> 12</h3>
                <p>Empleados</p>
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="card bg-danger text-white">
              <div class="card-body text-center">
                <h3><i class="fas fa-money-bill-wave"></i> $9,540</h3>
                <p>Ingresos</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-6 mb-4">
    <div class="card">
      <div class="card-header bg-success text-white">
        <h5 class="mb-0">Actividad Reciente</h5>
      </div>
      <div class="card-body">
        <ul class="list-group">
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <i class="fas fa-user-plus text-success"></i>
              <span class="ml-2">Nuevo usuario registrado</span>
              <small class="text-muted d-block">María Rodríguez</small>
            </div>
            <span class="badge badge-primary badge-pill">Hace 5 min</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <i class="fas fa-cash-register text-info"></i>
              <span class="ml-2">Nueva transacción</span>
              <small class="text-muted d-block">Venta #1089</small>
            </div>
            <span class="badge badge-primary badge-pill">Hace 15 min</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <i class="fas fa-file-invoice text-warning"></i>
              <span class="ml-2">Factura generada</span>
              <small class="text-muted d-block">Factura #2045</small>
            </div>
            <span class="badge badge-primary badge-pill">Hace 30 min</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <i class="fas fa-user-edit text-danger"></i>
              <span class="ml-2">Perfil actualizado</span>
              <small class="text-muted d-block">Juan Pérez</small>
            </div>
            <span class="badge badge-primary badge-pill">Hace 45 min</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="mt-3">
  <a href="/dashboard" class="btn btn-secondary mr-2"><i class="fas fa-arrow-left"></i> Volver al Dashboard</a>
  <a href="/users/logout" class="btn btn-danger"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a>
</div>
